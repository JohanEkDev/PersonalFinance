<UserControl x:Class="PersonalFinance.Views.IncomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalFinance.Views"
      xmlns:vm="clr-namespace:PersonalFinance.ViewModels">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: list -->
        <Border Grid.Column="0" Padding="8" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Income" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                <ListView ItemsSource="{Binding Transactions}" SelectedItem="{Binding SelectedTransaction}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="80"/>
                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category.Name}" Width="120"/>
                            <GridViewColumn Header="Frequency" DisplayMemberBinding="{Binding Frequency}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>

        <!-- Right: edit/add -->
        <Border Grid.Column="1" Padding="12" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="8,0,0,0" Background="#FFEFEFEF">
            <StackPanel>
                <TextBlock Text="Add / Edit Income" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Amount:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Category:" Width="80" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding AllCategories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Frequency:" Width="80" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Frequencies}" SelectedItem="{Binding Frequency}" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                    <Button Content="Add" Command="{Binding AddCommand}" Margin="4"/>
                    <Button Content="Save" Command="{Binding SaveCommand}" Margin="4"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="4"/>
                    <Button Content="Clear" Command="{Binding ClearCommand}" Margin="4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
