<Window x:Class="PersonalFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinance"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF2C3E50" VerticalAlignment="Stretch">
            <Button Content="Summary" Margin="10" Padding="10" Foreground="White" Background="Transparent"
                    Command="{Binding ShowSummaryCommand}" />
            <Button Content="Prognosis" Margin="10" Padding="10" Foreground="White" Background="Transparent"
        Command="{Binding ShowPrognosisCommand}" />
            <Button Content="Income" Margin="10" Padding="10" Foreground="White" Background="Transparent"
                    Command="{Binding ShowIncomeCommand}" />
            <Button Content="Expense" Margin="10" Padding="10" Foreground="White" Background="Transparent"
                    Command="{Binding ShowExpenseCommand}" />
            <Button Content="Categories" Margin="10" Padding="10" Foreground="White" Background="Transparent"
                    Command="{Binding ShowCategoriesCommand}" />
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
        
    </Grid>
</Window>
