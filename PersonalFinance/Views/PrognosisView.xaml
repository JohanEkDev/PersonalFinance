<UserControl x:Class="PersonalFinance.Views.PrognosisView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalFinance.Views"
      xmlns:resources="clr-namespace:PersonalFinance.Resources">

    <UserControl.Resources>
        <resources:ColorValueConverter x:Key="ColorValue"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Selector + Forecast summary -->
        <Border Grid.Column="0" Padding="8" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Select Period"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <ComboBox Width="140"
                              ItemsSource="{Binding Months}"
                              SelectedIndex="{Binding SelectedMonthIndex}" />

                    <ComboBox Width="90"
                              Margin="8,0,0,0"
                              ItemsSource="{Binding Years}"
                              SelectedItem="{Binding SelectedYear}" />

                    <Button Content="Load prognosis"
                            Margin="12,0,0,0"
                            Command="{Binding LoadCommand}" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Monthly Prognosis"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6">
                        <TextBlock Text="Income:" Width="100"/>
                        <TextBlock Text="{Binding MonthlyTotalIncome}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6">
                        <TextBlock Text="Expense:" Width="100"/>
                        <TextBlock Text="{Binding MonthlyTotalExpense}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Net:" Width="100" FontWeight="Bold"/>
                        <TextBlock Text="{Binding MonthlyTotalNet}" FontWeight="Bold"
                                   Foreground="{Binding MonthlyTotalNet, Converter={StaticResource ColorValue}}"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Yearly Prognosis"
                           FontWeight="Bold"
                           Margin="0,16,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Income:" Width="100"/>
                    <TextBlock Text="{Binding YearlyTotalIncome}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Expense:" Width="100"/>
                    <TextBlock Text="{Binding YearlyTotalExpense}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Net:" Width="100" FontWeight="Bold"/>
                    <TextBlock Text="{Binding YearlyTotalNet}" FontWeight="Bold"
                    Foreground="{Binding YearlyTotalNet, Converter={StaticResource ColorValue}}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Padding="12"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="4"
                Margin="8,0,0,0"
                Background="#FFEFEFEF">
            <StackPanel>
                <TextBlock Text="Monthly Income" FontWeight="Bold" Margin="0,0,0,4"/>
                <ListView ItemsSource="{Binding IncomeTransactions}" Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category.Name}" Width="100"/>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="80"/>
                            <GridViewColumn Header="Start Date" DisplayMemberBinding="{Binding StartDate, StringFormat={}{0:yyyy-MM-dd}}" Width="100"/>
                            <GridViewColumn Header="End Date" DisplayMemberBinding="{Binding EndDate, StringFormat={}{0:yyyy-MM-dd}}" Width="100"/>
                            <GridViewColumn Header="Frequency" DisplayMemberBinding="{Binding Frequency}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Text="Monthly Expense" FontWeight="Bold" Margin="0,12,0,4"/>
                <ListView ItemsSource="{Binding ExpenseTransactions}" Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category.Name}" Width="100"/>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="80"/>
                            <GridViewColumn Header="Start Date" DisplayMemberBinding="{Binding StartDate, StringFormat={}{0:yyyy-MM-dd}}" Width="100"/>
                            <GridViewColumn Header="End Date" DisplayMemberBinding="{Binding EndDate, StringFormat={}{0:yyyy-MM-dd}}" Width="100"/>
                            <GridViewColumn Header="Frequency" DisplayMemberBinding="{Binding Frequency}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
