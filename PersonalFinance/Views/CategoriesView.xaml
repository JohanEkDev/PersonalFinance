<UserControl x:Class="PersonalFinance.Views.CategoriesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalFinance.Views">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Padding="8" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Categories" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                <ListView ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Padding="12" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="8,0,0,0" Background="#FFEFEFEF">
            <StackPanel>
                <TextBlock Text="Add / Edit Category" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Name:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Button Content="Add" Command="{Binding AddCommand}" Margin="4"/>
                    <Button Content="Save" Command="{Binding SaveCommand}" Margin="4"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="4"/>
                    <Button Content="Clear" Command="{Binding ClearCommand}" Margin="4"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
